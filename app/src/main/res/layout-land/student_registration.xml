<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kstarostin.thumbtack.net.netexam.ui.entry.fragments.RegistrationFragment">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/register_input_field_top_margin">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/registration_between_field_land"
            android:layout_marginEnd="@dimen/registration_between_field_land">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/sfamily"
                android:hint="@string/lastName"
                android:inputType="text" />

            <EditText
                android:layout_width="@dimen/registration_field_width_land"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/sname"
                android:hint="@string/name"
                android:inputType="text" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/spatronymic"
                android:hint="@string/patronymic"
                android:inputType="text" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/group"
                android:hint="@string/group"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="@dimen/registration_field_width_land"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/semester"
                android:hint="@string/semester"
                android:inputType="numberDecimal" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/slogin"
                android:hint="@string/login" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/spassword1"
                android:hint="@string/password"
                android:inputType="textPassword" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/spassword2"
                android:hint="@string/passwordConfirm"
                android:inputType="textPassword" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
