<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="@color/outer_card_background">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/standard_card_corner_radius"
        tools:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/question_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/exam_recycler_item_text_padding"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <View
                android:layout_width="@dimen/protocol_divider_height"
                android:layout_height="@dimen/protocol_divider_width"
                android:layout_toEndOf="@id/question_number"
                android:layout_toRightOf="@id/question_number"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/question_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:padding="@dimen/exam_recycler_item_text_padding"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>